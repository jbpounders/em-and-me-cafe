<section id="signup" class="newsletter section">
  <h2 class="section-title">Visit Us</h2>
  <h3 class="newsletter-subtitle">Be the First to Taste What's New</h3>

  <p class="newsletter-desc">
    Test & email updates, soft launch invites, limited drops, and secret menu items.
  </p>

  <form class="signup-form" action="#" method="POST">
    <div class="form-row">
      <input
        type="text"
        name="name"
        placeholder="Name"
        required
        class="form-input"
      />
      <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="form-input"
      />
      <button type="submit" class="btn btn-primary form-btn">Sign Up</button>
    </div>
  </form>
</section>

<style>
  .newsletter {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding-left: var(--spacing-md);
    padding-right: var(--spacing-md);
  }

  .newsletter-subtitle {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
  }

  .newsletter-desc {
    color: var(--color-text);
    margin-bottom: var(--spacing-lg);
    font-size: 0.9rem;
  }

  .signup-form {
    width: 100%;
  }

  .form-row {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    justify-content: center;
  }

  .form-input {
    flex: 1;
    min-width: 150px;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 2px solid var(--color-navy);
    border-radius: 4px;
    font-family: var(--font-body);
    font-size: 1rem;
    background: var(--color-white);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  .form-btn {
    min-width: 100px;
  }

  @media (max-width: 500px) {
    .form-row {
      flex-direction: column;
    }

    .form-input,
    .form-btn {
      width: 100%;
    }
  }
</style>
